#!/bin/sh

# displayline (Skim)
#
# Usage: displayline LINE PDFFILE [TEXSOURCEFILE]

line=$1
file="$2"
if [ $# -gt 3 ]; then
source="$3"
else
source="$2"
fi

/usr/bin/osascript -e "tell application \"Skim\"" -e "activate" -e "open file display POSIX file \""${file}"\" at TeX line "${line}" from source POSIX file \""${source}"\"" -e "end tell"
