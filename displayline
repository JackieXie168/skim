#!/bin/sh

# displayline (Skim)
#
# Usage: displayline LINE PDFFILE [TEXSOURCEFILE]

# get arguments
line=$1
if [ "${0%forward-search.sh}" != "$0" ]; then
# if called as forward-search.sh, the order of arguments is different
source="$2"
file="$3"
else
file="$2"
[ $# -gt 2 ] && source="$3" || source="${file%.pdf}.tex"
fi

# expand relative paths
[ "${file:0:1}" == "/" ] || file="${PWD}/${file}"
[ "${source:0:1}" == "/" ] || source="${PWD}/${source}"

# pass NULL-separated arguments as stdin to osascript
# the resource fork of this file is the compiled AppleScript
echo -ne "${line}\x00${file}\x00${source}" | /usr/bin/osascript -- "$0"
